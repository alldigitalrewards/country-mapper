{
  "name": "alldigitalrewards/country-mapper",
  "description": "Country Mapper Library",
  "type": "library",
  "license": "MIT",
  "require": {
    "php" : "^7.3|^8.0",
    "guzzlehttp/guzzle": "^7.0",
    "ext-json": "*",
    "league/iso3166": "^2.1"
  },
  "require-dev": {
    "phpunit/phpunit" : "^7.0|^8|^9",
    "squizlabs/php_codesniffer": "^3.0",
    "roave/security-advisories": "dev-latest"
  },
  "autoload": {
    "psr-4": {
      "AllDigitalRewards\\CountryMapper\\": "src"
    }
  },
  "scripts": {
    "test": "phpunit",
    "check-style": "phpcs -p --standard=phpcs.xml src",
    "fix-style": "phpcbf -p --standard=phpcs.xml src"
  }
}

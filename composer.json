{
  "name": "alldigitalrewards/country-mapper",
  "description": "Country Mapper Library",
  "type": "library",
  "license": "MIT",
  "require": {
    "php" : "^7.0|^8.0",
    "guzzlehttp/guzzle": "^6.5|^7.0",
    "ext-json": "*",
    "league/iso3166": "~2.1.5|^3.0|^4.0"
  },
  "require-dev": {
    "phpunit/phpunit" : "^7.0|^8|^9",
    "squizlabs/php_codesniffer": "^3.0",
    "roave/security-advisories": "dev-latest"
  },
  "autoload": {
    "psr-4": {
      "AllDigitalRewards\\CountryMapper\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "AllDigitalRewards\\Tests\\": "./tests"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "check-style": "vendor/bin/phpcs -p --standard=phpcs.xml app",
    "fix-style": "vendor/bin/phpcbf -p --standard=phpcs.xml app"
  }
}
